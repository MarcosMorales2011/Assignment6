extends layout

block content
  .container.mt-5
    h1 Add User
    form#userForm
      .mb-3
        label(for="name") Name:
        input#name.form-control(type="text" name="name" required)
      .mb-3
        label(for="age") Age:
        input#age.form-control(type="number" name="age" required)
      button.btn.btn-primary(type="submit") Submit

    hr
    h2 Users
    ul#userList
